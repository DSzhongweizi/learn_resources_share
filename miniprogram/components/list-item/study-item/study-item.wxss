/* components/list-item/study-item/study-item.wxss */
@import "/assets/styles/iconfont.wxss";
.study-box{
  position: relative;
  height: 15vh;
  overflow: hidden;
}
.study-move-box,.study-left,.study-right,.study-tags{
  position: relative;
  display: flex;
}
.study-move-box{
  background-color: #f3f3f3;
  border: 1rpx solid #e4e4e4;
  
  width: 100%;
  height: 100%;
}
.study-left{
  width: 30%;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.study-name{
  text-align: center;
  width: 100%;
  font-size: 40rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.study-right{
  width: 70%;
  flex-direction: column;
  justify-content: space-evenly;
}
.study-tags{
  justify-content: space-around;
}
.study-tags-item{
  background-color: #FF976A;
  border-radius: 5rpx;
  font-size: 25rpx;
  padding: 8rpx;
}
.rate-box{
  z-index: -1;
}
.study-note,.rate{
  text-align: center;
  font-size: 24rpx !important;
}
.study-note{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.study-action{
  display: flex;
  position: absolute;
  width: 100px;
  right: 0;
  height: 100%;
  margin: 1px 0;
  /* z-index: -2; */
}
.icon-download,.icon-collect,.icon-collected{
  display: flex;
  flex: 1;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
  font-size: 48rpx;
}
.icon-collected{
  color: #FC5531;
}
