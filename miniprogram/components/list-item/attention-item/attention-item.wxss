/* components/list-item/attention/attention.wxss */
.attention-content{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx;
}
.content-left{
  display: flex;
}
.user-avatar{
  width: 3rem;
  height: 3rem;
  border-radius: 50%;
  margin-right: 10rpx;
}
.nickname,.signature{
  display: block;
}
.nickname, .state{
  color: #fff;
}
.signature{
  color: #aaa;
  width: 400rpx;
  font-size: 0.8rem;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.state{
  width: 3rem;
  text-align: center;
  padding: 0.4rem 1rem;
  border-radius: 6rpx;
}
.state-yes{
  background-color: #555;
}
.state-no{
  background-color: #ee1717;
}