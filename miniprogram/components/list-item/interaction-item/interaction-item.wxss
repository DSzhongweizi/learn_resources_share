/* components/list-item/interaction/interaction-item.wxss */
.interaction-item{
  display: flex;
  border-bottom: 1rpx solid #999;
  position: relative;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.middle{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
}
.title{
  color: #000;
  margin-bottom: 10rpx;
}
.subtitle{
  color: #999;
  font-size: 24rpx;
}
.right{
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
}