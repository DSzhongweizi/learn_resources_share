/* miniprogram/pages/message/privateletter/privateletter.wxss */
@import "/assets/styles/iconfont.wxss";
.privateletter-box{
  position: fixed;
  margin-top: 20px;
  background-color: #000;
  height: 100vh;
  width: 100vw;
}
.topbar{
  padding: 0 8px;
  height: 48px;
  display: flex;
  align-items: center;
  color: #fff;
  border-bottom: 1px solid #888;
}
.icon-return{
  
  font-size: 18px;
}
.username{
  width: 100%;
  text-align: center;
}
.chat-box{
  height: 80vh;
}
.chat-item{
  display: flex;
  align-items: center;
  padding: 10rpx;
}
.chat-avatar{
  width: 40px;
  height: 40px;
  margin: 5px;
  border-radius: 50%;
  flex-shrink: 0
}
.chat-content{
  background-color: #fff;
  padding: 10rpx;
  margin: 5px;
  border-radius: 5rpx;
  color: #000;
}
.chat-datetime{
  display: flex;
  justify-content: center;
  color: #888;
  font-size: 12px;
}
.chat-right{
  flex-direction: row-reverse;
}