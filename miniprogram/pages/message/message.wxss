.message-item{
  display: flex;
  position: relative;
}
.left{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80rpx;
  height: 80rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-color: #FF2C55;
  padding: 10rpx;
}
.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin: 20rpx;
}
.iconfont{
  color: #fff;
  font-size: 48rpx;
}
.icon-right-arrow,.icon-dot{
  /* font-size: rpx; */
  position: absolute;
  right: 10rpx;
  top: 50%;
  transform: translateY(-50%);
}
.icon-right-arrow{
  color: #000;
}
.icon-dot{
  color: #FF2C55;
}
.middle{
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 140rpx;
}
.title{
  color: #000;
  margin-bottom: 10rpx;
}
.subtitle{
  color: #999;
  font-size: 24rpx;
}