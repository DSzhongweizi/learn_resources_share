.loadmore-box {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  border-radius: 5rpx;
  margin: 10px;
  padding: 10px;
}

.icon {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.icon-rotate {
  animation: rotate 5s linear infinite;
}

@keyframes rotate {
  0% {
    transform: rotate(90deg)
  }

  33% {
    transform: rotate(180deg)
  }

  66% {
    transform: rotate(270deg)
  }

  100% {
    transform: rotate(360deg)
  }
}

.text {
  color: #aaa;
}

.line {
  width: 20%;
  height: 1rpx;
  background: #ccc;
  margin: 10px;
}